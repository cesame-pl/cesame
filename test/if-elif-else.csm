int main() {
  int x;
  int y;
  x = 1;
  y = 2;

  /* You can do if (elif)+ (else)* */

  if (x == 1) {
    y = 3;
  } elif (x == 2) {
    y = 2;
  } elif (x == 3) {
    y = 1;
  } else {
    y = 0;
  }
  
  if (x == 1) {
    y = 3;
  } else {
    y = 0;
  }
  
  if (x == 1) {
    y = 3;
  }

  if (x == 1) {
    y = 3;
  } elif (x == 2) {
    y = 2;
  }
}